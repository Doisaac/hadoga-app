<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Título -->
        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Nueva Sucursal"
            android:paddingTop="72dp"/>

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card_button"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                style="@style/FieldTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Datos"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/etNombreSucursal"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Nombre de sucursal" />

            <EditText
                android:id="@+id/etCodigoSucursal"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Código de sucursal" />

            <Spinner
                android:id="@+id/spDepartamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edittext_field_background"
                android:popupBackground="@color/colorBackground"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/etDireccion"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Dirección completa" />

            <EditText
                android:id="@+id/etTelefono"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Teléfono" />

            <EditText
                android:id="@+id/etCorreo"
                style="@style/HadogaFieldEditText"
                android:layout_marginBottom="15dp"
                android:hint="Correo" />

        </LinearLayout>

        <!-- Botón guardar -->
        <Button
            android:id="@+id/btnGuardarSucursal"
            style="@style/HadogaPrimaryButton"
            android:text="Guardar" />

    </LinearLayout>
</ScrollView>