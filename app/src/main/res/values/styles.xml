<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo global de títulos -->
    <style name="TitleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo global de subtítulos -->
    <style name="SubtitleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Título de campo (ej: Email, Contraseña) -->
    <style name="FieldTitleText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para EditText -->
    <style name="HadogaEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/colorGrayText</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Botón principal -->
    <style name="HadogaPrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_primary_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Texto pequeño general (ej: enlaces) -->
    <style name="SmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrayText</item>
    </style>

</resources>